<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        messagesPack="com.company.devbrandlogin.web.screens.login"
        caption="mainMsg://loginWindow.caption">
    <actions>
        <action id="submit"
                caption="msg://loginWindow.okButton"
                shortcut="ENTER"/>
    </actions>
    <layout>
        <hbox id="mainLayout"
              expand="backgroundImage"
              height="100%"
              width="100%">
            <vbox id="loginlayout"
                  expand="loginPanel"
                  height="100%"
                  stylename="c-login-layout"
                  width="500px">
                <vbox id="loginPanel">
                    <vbox id="loginMainBox"
                          align="MIDDLE_CENTER"
                          margin="true"
                          width="AUTO">
                        <image id="logoImage"
                               align="MIDDLE_CENTER"
                               height="AUTO"
                               scaleMode="SCALE_DOWN"
                               stylename="c-login-logo"
                               width="AUTO"/>
                        <label id="welcomeLabel"
                               align="MIDDLE_CENTER"
                               stylename="c-login-welcome-label"
                               value="mainMsg://loginWindow.welcomeLabel"/>
                        <capsLockIndicator id="capsLockIndicator"
                                           align="MIDDLE_CENTER"/>
                        <vbox id="loginForm"
                              spacing="true">
                            <textField id="loginField"
                                       caption="mainMsg://loginWindow.loginField"
                                       htmlName="loginField"
                                       inputPrompt="mainMsg://loginWindow.loginPlaceholder"
                                       stylename="c-login-field"/>
                            <passwordField id="passwordField"
                                           autocomplete="true"
                                           capsLockIndicator="capsLockIndicator"
                                           caption="mainMsg://loginWindow.passwordField"
                                           htmlName="passwordField"
                                           inputPrompt="mainMsg://loginWindow.passwordPlaceholder"
                                           stylename="c-login-field"/>
                            <checkBox id="rememberMeCheckBox"
                                      caption="mainMsg://loginWindow.rememberMe"/>
                            <button id="loginButton"
                                    action="submit"
                                    align="MIDDLE_CENTER"
                                    stylename="c-login-button"/>
                        </vbox>
                    </vbox>
                </vbox>
                <hbox id="bottomPanel"
                      margin="false, true, false, true"
                      height="40px"
                      width="100%">

                    <cssLayout id="poweredByLink"
                               height="100%"
                               stylename="c-login-powered-by-box">
                        <label htmlEnabled="true"
                               stylename="c-login-powered-by-label"
                               value="msg://cuba.poweredBy"/>
                        <link url="http://cuba-platform.com"
                              stylename="c-login-powered-by-link"
                              height="15px"
                              width="85px"/>
                        <image scaleMode="SCALE_DOWN"
                               stylename="c-login-powered-by-image"
                               height="15px"
                               width="85px">
                            <classpath path="com/company/devbrandlogin/web/screens/login/resources/poweredby.svg"/>
                        </image>
                    </cssLayout>

                    <lookupField id="localesSelect"
                                 align="MIDDLE_RIGHT"
                                 nullOptionVisible="false"
                                 stylename="c-login-locales-select"
                                 textInputAllowed="false"
                                 width="100px"/>
                </hbox>
            </vbox>
            <image id="backgroundImage"
                   scaleMode="FILL"
                   height="100%">
                <classpath path="com/company/devbrandlogin/web/screens/login/resources/background.png"/>
            </image>
        </hbox>
    </layout>
</window>
