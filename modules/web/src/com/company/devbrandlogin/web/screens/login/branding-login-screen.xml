<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        messagesPack="com.company.devbrandlogin.web.screens.login"
        caption="msg://loginWindow.caption">
    <actions>
        <action id="submit"
                caption="msg://loginWindow.okButton"
                invoke="login" shortcut="ENTER"/>
    </actions>
    <layout>
        <cssLayout id="loginLayout" stylename="c-login-layout">
            <vbox expand="loginPanel" width="500px" height="100%" stylename="c-login-container">
                <vbox id="loginPanel">
                    <vbox id="loginMainBox"
                          align="MIDDLE_CENTER"
                          margin="true"
                          width="AUTO">
                        <image id="logoImage"
                               align="MIDDLE_CENTER"
                               height="AUTO"
                               scaleMode="SCALE_DOWN"
                               width="AUTO"
                               stylename="c-login-logo"/>
                        <label id="welcomeLabel"
                               align="MIDDLE_CENTER"
                               value="msg://loginWindow.welcomeLabel"
                               stylename="c-login-welcome-label"/>
                        <capsLockIndicator id="capsLockIndicator"
                                           align="MIDDLE_CENTER"/>
                        <vbox id="loginForm"
                              spacing="true">
                            <textField id="loginField"
                                       caption="msg://loginWindow.loginField"
                                       htmlName="loginField"
                                       inputPrompt="msg://loginWindow.loginPlaceholder"
                                       stylename="c-login-field"/>
                            <passwordField id="passwordField"
                                           autocomplete="true"
                                           capsLockIndicator="capsLockIndicator"
                                           caption="msg://loginWindow.passwordField"
                                           htmlName="passwordField"
                                           inputPrompt="msg://loginWindow.passwordPlaceholder"
                                           stylename="c-login-field"/>
                            <checkBox id="rememberMeCheckBox"
                                      caption="msg://loginWindow.rememberMe"/>
                            <button id="loginButton"
                                    action="submit"
                                    align="MIDDLE_CENTER"
                                    stylename="c-login-button"/>
                        </vbox>
                    </vbox>
                </vbox>
                <hbox id="bottomPanel"
                      height="40px"
                      width="100%"
                      margin="false, true, false, true">

                    <cssLayout id="poweredByBox"
                               height="100%"
                               stylename="c-login-powered-by-box">
                        <label id="poweredByLabel"
                               htmlEnabled="true"
                               stylename="c-login-powered-by-label"
                               value="msg://cuba.poweredBy"/>
                        <image id="poweredByImage"
                               width="85px"
                               scaleMode="SCALE_DOWN"
                               stylename="c-login-powered-by-image">
                            <classpath path="com/company/devbrandlogin/web/screens/login/resources/poweredby.svg"/>
                        </image>
                    </cssLayout>

                    <hbox id="localesSelectBox"
                          box.expandRatio="1"
                          height="100%"
                          width="100%">
                        <image id="countryImage"
                               scaleMode="SCALE_DOWN"
                               align="MIDDLE_RIGHT"
                               box.expandRatio="1"
                               stylename="c-login-locales-image">
                            <classpath path="com/company/devbrandlogin/web/screens/login/resources/locales/en.svg"/>
                        </image>
                        <lookupField id="localesSelect"
                                     align="MIDDLE_RIGHT"
                                     nullOptionVisible="false"
                                     stylename="c-login-locales-select"
                                     textInputAllowed="false"
                                     width="100px"/>
                    </hbox>
                </hbox>
            </vbox>
            <image id="brandingImage"
                   scaleMode="FILL"
                   stylename="c-login-image-container">
                <classpath path="com/company/devbrandlogin/web/screens/login/resources/background.png"/>
            </image>
        </cssLayout>
    </layout>
</window>
